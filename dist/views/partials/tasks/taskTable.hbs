{{#if tasks}}

<table class="table table-bordered table-striped table-hover table-dark">
  <thead>
    <tr>
      <th>N.</th>
      <th>Title</th>
      <th>description</th>
      <th>Operations</th>
    </tr>
  </thead>

  <tbody>
    {{#each tasks}}
    <tr>
      <td>{{@index}}</td>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>
        {{#if done}}
        <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">Undone</a>
        {{else}}
        <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success">Done</a>
        {{/if}}

        <a href="/tasks/{{_id}}/edit" class="btn btn-danger">Update</a>
        <a href="/tasks/{{_id}}/delete" class="btn btn-info">Delete</a>
      </td>
    </tr>


    {{/each}}
  </tbody>
</table>

{{else}}
<div class="h-100 d-flex align-items-cemter justify-content-center">
  <div class="text-center text-white">
    <h1>There are no tasks</h1>
    <img src="/icons/icon.svg" alt="">
  </div>
</div>
{{/if}}


